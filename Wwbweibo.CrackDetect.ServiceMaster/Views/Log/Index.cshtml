@using Wwbweibo.CrackDetect.Models
@{ ViewData["Title"] = "日志管理";}

<div>
    <h2>
        日志管理
    </h2>
</div>


<div>
    <table class="table table-striped table-bordered">
        <thead>
        <td>#</td>
        <td>日志等级</td>
        <td>服务类型</td>
        <td>消息</td>
        <td>时间</td>
        </thead>
        @{ int index = 0;}
        @foreach (var log in ViewData["logs"] as LogModel[])
        {
            index = index + 1;
            <tr>
                <td>@index</td>
                <td>
                    @log.LogLevel.ToString()
                </td>
                <td>
                    @if (log.OriginServiceType == ServiceType.DataCalc)
                    {
                        <label>图像计算服务</label>
                    }else if (log.OriginServiceType == ServiceType.DataCollect)
                    {
                        <label>数据采集服务</label>
                    }

                </td>
                <td>
                    @log.LogMessage
                </td>
                <td>@log.LogTime</td>
            </tr>
        }
        
    </table>
</div>