@{ ViewData["Title"] = "日志管理";}

<div>
    <h2>
        日志管理
    </h2>
</div>


<div>
    <table class="table table-striped table-bordered">
        <thead>
        <td>#</td>
        <td>日志等级</td>
        <td>服务类型</td>
        <td>消息</td>
        <td>时间</td>
        </thead>
        @{ int index = 0;}
        @foreach (var log in ViewData["logs"] as LogModel[])
        {
            index = index + 1;
            <tr>
                <td>@index</td>
                <td>
                    @log.LogLevel
                </td>
                <td>
                    @if (log.OriginServiceType == ConstData.PythonPreprocessServiceName)
                    {
                        <label>图像预处理服务</label>
                    }
                    else if (log.OriginServiceType == ConstData.PythonCrackCalcServiceName)
                    {
                        <label>图像计算服务</label>
                    }

                </td>
                <td>
                    @log.LogMessage
                </td>
                <td>@log.LogTime</td>
            </tr>
        }
        
    </table>
</div>